{
  "compilerOptions": {
    "outDir": "dist",
    // Enable latest features
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "NodeNext",
    // Bundler mode
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    // Best practices
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.test.ts"
  ]
}
